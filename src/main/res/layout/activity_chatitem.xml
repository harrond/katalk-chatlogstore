<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_gravity="center_horizontal"
    android:id="@+id/layout" android:gravity="center">


    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/imageViewleft"
        android:background="#888888"
        android:layout_weight="1"
        android:layout_margin="10dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/profile"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_imageIner"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/a"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/im2"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >
        <TextView android:id="@+id/nametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/im3"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
            <TextView android:id="@+id/timetext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="8sp"
                android:layout_gravity="bottom"
                android:text=" " />
            <TextView android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13sp"
                android:text="text" />
            <TextView android:id="@+id/timetext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="8sp"
                android:layout_gravity="bottom"
                android:text=" " />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/imageViewright"
        android:background="#888888"
        android:layout_weight="1"
        android:layout_margin="10dp" />


</LinearLayout>